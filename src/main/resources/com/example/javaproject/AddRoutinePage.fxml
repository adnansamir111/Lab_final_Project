<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="475.0" prefWidth="520.0" spacing="15" style="-fx-background-color: #f4f6f9; -fx-padding: 20;" stylesheets="@tasks.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaproject.CONTROLLER.AddRoutinePageController">

    <!-- Title -->
    <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Add Routine Event" />

    <!-- Course Name -->
    <TextField fx:id="courseNameField" promptText="Course Name" style="-fx-padding: 10;" />

    <!-- Room Number -->
    <TextField fx:id="roomField" promptText="Room Number" style="-fx-padding: 10;" />

    <!-- Time Inputs -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="startTimeField" prefHeight="25.0" prefWidth="150.0" promptText="Start Time (HH:MM)" style="-fx-padding: 5;" />
        <TextField fx:id="endTimeField" prefHeight="25.0" prefWidth="150.0" promptText="End Time (HH:MM)" style="-fx-padding: 5;" />
    </HBox>

    <!-- Day Selection -->
    <ComboBox fx:id="dayOfWeekComboBox" promptText="Select Day" style="-fx-padding: 10; -fx-background-color: white; -fx-font-weight: bold; -fx-text-fill: white; -fx-border-color: black;" />

    <!-- Add Event Button -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#addRoutineEvent" prefHeight="35.0" prefWidth="150.0" styleClass="blueButton" text="Add Event" />
    </HBox>

    <!-- Back Button -->
    <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
        <bottom>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="418.0" BorderPane.alignment="CENTER">
                <Button onAction="#back" prefHeight="35.0" prefWidth="100.0" styleClass="greenButton" text="Back" />
            </HBox>
        </bottom>
    </BorderPane>

</VBox>
