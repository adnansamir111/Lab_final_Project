<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tab?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaproject.CourseDetailController">

    <!-- Top Bar -->
    <top>
        <ToolBar>
            <Button text="⬅ Back" onAction="#onBack"/>
            <Label fx:id="lblCourseTitle" style="-fx-font-size:18; -fx-font-weight:bold;"/>
        </ToolBar>
    </top>

    <!-- Tabs -->
    <center>
        <TabPane>
            <Tab text="Overview">
                <VBox spacing="10" style="-fx-padding:20;">
                    <Label fx:id="lblInstructor"/>
                    <Label fx:id="lblCredits"/>
                    <Button text="❌ Delete Course" onAction="#onDelete"/>
                </VBox>
            </Tab>
            <Tab text="Tasks"/>
            <Tab text="Study Sessions"/>
        </TabPane>
    </center>
</BorderPane>
