<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="741.0" prefWidth="900.0" stylesheets="@tasks.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaproject.CONTROLLER.DashboardController">

    <!-- Sidebar (Left side) -->
    <left>
        <VBox prefHeight="182.0" prefWidth="172.0" style="-fx-background-color: #2F4F4F; -fx-padding: 20; -fx-spacing: 20;">
            <!-- Use styleClass to apply CSS hover effect -->
            <Button onAction="#goToRoutinePage" prefHeight="40.0" prefWidth="134.0" styleClass="dashboard-button" text="Go to Routine">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Button>
            <Button onAction="#goToCoursePage" prefHeight="40.0" prefWidth="134.0" styleClass="dashboard-button" text="Go to COURSE" wrapText="true">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Button>

            <Button onAction="#goToTaskExplorerPage" prefHeight="40.0" prefWidth="135.0" styleClass="dashboard-button" text="TASK EXPLORER" wrapText="true">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Button>

            <Button onAction="#goToAnalyticsPage" prefHeight="40.0" prefWidth="125.0" styleClass="dashboard-button" text="Analytics">

                <font>
                    <Font name="Arial Black" size="12.0" />
                </font>
            </Button>


            <!-- New GradeSheet button with hover effect -->
            <Button onAction="#goToGradeSheetPage" prefHeight="40.0" prefWidth="160.0" styleClass="dashboard-button" text="Go to GradeSheet">
                <font>
                    <Font name="Arial Black" size="12.0" />
                </font></Button>

        </VBox>
    </left>

    <!-- Main Content Area (Right side) -->
    <center>
        <ScrollPane fitToWidth="true" prefHeight="700.0" prefWidth="700.0">
            <content>
                <VBox style="-fx-padding: 20; -fx-background-color: #f4f4f4; -fx-spacing: 5;">
                    <!-- Combined Today's Routine Header -->
                    <HBox alignment="CENTER_LEFT" prefWidth="10000.0" styleClass="routine-header-container">
                        <Label styleClass="routine-header-text" text="Today's Routine" />
                        <Label fx:id="routineHeader" styleClass="day-label-text" text="DAY" />
                    </HBox>

                    <TilePane fx:id="routineContainer" hgap="10" prefHeight="178.0" prefWidth="604.0" style="-fx-padding: 10;" vgap="10" />

                    <!-- Next 3 Days Tasks -->
                    <Label prefHeight="40.0" prefWidth="10000.0" styleClass="section-header" text="ðŸ“… Next 3 Days' Tasks" />
                    <ScrollPane fitToWidth="true" prefHeight="231.0" prefWidth="617.0" style="-fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="taskContainer" spacing="12" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);">
                            </VBox>
                        </content>
                    </ScrollPane>

                    <!-- Notifications Panel -->
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <Label prefWidth="10000.0" styleClass="section-header" text="ðŸ”” Notifications" />
                    </HBox>
                    <ScrollPane fitToWidth="true" prefHeight="259.0" prefWidth="604.0" style="-fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="notificationContainer" spacing="12" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);">
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
