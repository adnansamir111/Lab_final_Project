<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #F4F4F4;" stylesheets="@tasks.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaproject.GradeSheetController">

    <top>
        <HBox spacing="12.0" style="-fx-padding: 16 20 12 20; -fx-background-color: #2F4F4F;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Grade Sheet" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-background-color: #2F4F4F;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tableGrade" editable="true" prefHeight="560.0" prefWidth="860.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colCourseId" prefWidth="140.0" text="Course ID" />
                        <TableColumn fx:id="colQuiz1" prefWidth="110.0" text="Quiz 1" />
                        <TableColumn fx:id="colQuiz2" prefWidth="110.0" text="Quiz 2" />
                        <TableColumn fx:id="colQuiz3" prefWidth="110.0" text="Quiz 3" />
                        <TableColumn fx:id="colQuiz4" prefWidth="110.0" text="Quiz 4" />
                        <TableColumn fx:id="colMid" prefWidth="120.0" text="Mid" />
                        <TableColumn fx:id="colFinal" prefWidth="120.0" text="Final" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="0" left="20" right="20" top="10" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox prefHeight="39.0" prefWidth="900.0" spacing="10.0" style="-fx-padding: 12 20 16 20; -fx-background-color: #2F4F4F;" BorderPane.alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBack" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 8;" styleClass="greenButton" text="Back" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
